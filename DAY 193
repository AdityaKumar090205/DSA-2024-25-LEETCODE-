class Solution {
public:
    int longestSubarray(vector<int>& nums) {
       int res=0;
       int maxVal=0;
       int streak=0;
       for(auto num:nums){
        if(num>maxVal){
            maxVal=num;
            res=0;
            streak=0;
        }
        if(maxVal==num){
            streak++; 
        }else{
            streak=0;
        }
        res=max(res,streak);

       }
    return res; 
    }
};
